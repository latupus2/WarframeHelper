<Window x:Class="Warframe_Helper.processing_Image"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warframe_Helper"
        mc:Ignorable="d"
        Title="processing_Image" Height="556" Width="550" Closed="WindowClosed">
    <Grid>
        <Image x:Name="ScreenImage" HorizontalAlignment="Left" Height="251" Margin="32,28,0,0" VerticalAlignment="Top" Width="248"/>
        <Button x:Name="LoadImageButton" Content="Загрузить" HorizontalAlignment="Left" Margin="298,28,0,0" VerticalAlignment="Top" Height="37" Width="94" Click="LoadImageButton_Click"/>
        <Slider x:Name="SliderThreshold" HorizontalAlignment="Left" Margin="314,172,0,0" VerticalAlignment="Top" Width="200" ValueChanged="SliderThreshold_ValueChanged" Maximum="255" Minimum="-255"/>
        <CheckBox x:Name="ThresholdCheck" Content="Threshold" HorizontalAlignment="Left" Margin="298,152,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ThresholdValue" Content="" HorizontalAlignment="Left" Margin="455,149,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
